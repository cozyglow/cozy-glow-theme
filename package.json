{
  "name": "cozy-glow-theme",
  "description": "Cozy Glow theme.",
  "author": "Cozy Glow (cozyglow.co.uk)",
  "scripts": {
    "build": "run-p css js",
    "css-compile": "node-sass --include-path node_modules --output-style compressed --source-map true --source-map-contents true --precision 6 scss -o dist/css/",
    "css-lint": "stylelint scss/",
    "css-prefix": "postcss --replace dist/css/*.css --use autoprefixer --map",
    "css-test": "yarn run css-lint && yarn run css",
    "css": "run-s css-compile css-prefix",
    "deploy": "run-s build gh-pages",
    "dist": "run-p css js",
    "js-compile-bundle": "rollup --environment BUNDLE:true --config build/rollup.config.js --sourcemap",
    "js-compile-standalone": "rollup --environment BUNDLE:false --config build/rollup.config.js --sourcemap",
    "js-compile": "run-p js-compile-*",
    "js-lint": "eslint --cache --cache-location .cache/.eslintcache --report-unused-disable-directives .",
    "js-minify-bundle": "terser --compress typeofs=false --mangle --comments \"/^!/\" --source-map \"content=dist/js/main.bundle.js.map,includeSources,url=main.bundle.min.js.map\" --output dist/js/main.bundle.min.js dist/js/main.bundle.js",
    "js-minify-standalone": "terser --compress typeofs=false --mangle --comments \"/^!/\" --source-map \"content=dist/js/main.js.map,includeSources,url=main.min.js.map\" --output dist/js/main.min.js dist/js/main.js",
    "js-minify": "run-p js-minify-*",
    "js-test": "",
    "js": "run-s js-compile js-minify",
    "lint": "run-p css-lint js-lint",
    "server": "serve --listen 3000",
    "start": "run-p watch server",
    "watch-css": "nodemon -e html,scss -x \"yarn run css\"",
    "watch-js": "nodemon -e html,js -x \"yarn run js\"",
    "watch": "run-p watch-*",
    "test": "run-s lint dist css-test js-test"
  },
  "dependencies": {
    "@epickris/bootstrap-kit": "^0.1.2",
    "bootstrap": "^4.6.0",
    "bootstrap-icons": "^1.3.0",
    "chroma-js": "^1.3.6",
    "jquery": "^3.5.1",
    "lodash": "^4.17.20",
    "popper.js": "^1.16.1",
    "trianglify": "^3.0.0",
    "unit-to-px": "^1.0.5"
  },
  "devDependencies": {
    "@babel/core": "7.12.10 ",
    "@babel/preset-env": "^7.12.11",
    "@rollup/plugin-babel": "^5.2.2",
    "@rollup/plugin-node-resolve": "^11.0.1",
    "autoprefixer": "^10.2.0",
    "eslint": "^7.17.0",
    "eslint-config-xo": "^0.34.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-unicorn": "^25.0.1",
    "exports-loader": "^2.0.0",
    "gh-pages": "^2.2.0",
    "node-sass": "^5.0.0",
    "nodemon": "^2.0.7",
    "npm-run-all": "^4.1.5",
    "pantone-css": "^0.1.2",
    "postcss": "^8.2.3",
    "postcss-cli": "^8.3.1",
    "rollup": "^2.36.1",
    "serve": "^11.3.2",
    "stylelint": "^13.8.0",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-standard": "^19",
    "stylelint-config-twbs-bootstrap": "^2.1.0",
    "stylelint-order": "^3.0.1",
    "terser": "5.1.0",
    "yarn-run-all": "^3.1.1"
  },
  "repository": "https://github.com/cozyglow/cozy-glow-theme.git",
  "bugs": "https://github.com/cozyglow/cozy-glow-theme/issues",
  "files": [
    "dist/*",
    "docs/*",
    "fonts/*",
    "js/*",
    "scss/*"
  ],
  "version": "0.5.6"
}
