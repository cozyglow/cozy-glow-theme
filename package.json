{
    "name": "cozy-glow-theme",
    "description": "Cozy Glow theme.",
    "author": "Cozy Glow (cozyglow.co.uk)",
    "scripts": {
        "start": "gulp docs",
        "build": "run-p css-build",
        "css-build": "run-s scss-build css-prefix css-minify",
        "css-minify": "cleancss --format breakWith=unix --source-map --source-map-inline-sources --output dist/css/main.min.css dist/css/main.css",
        "css-prefix": "postcss --replace \"dist/css/*.css\" \"!dist/css/*.min.css\"",
        "deploy": "run-s build gh-pages",
        "scss-build": "node-sass --output-style expanded --source-map true --source-map-contents true --importer=node_modules/node-sass-tilde-importer scss/ -o dist/css/",
        "scss-lint": "stylelint \"scss/**/*.scss\" --cache"
    },
    "dependencies": {
        "chroma-js": "^1",
        "lodash": "^4",
        "trianglify": "^1",
        "unit-to-px": "^1"
    },
    "devDependencies": {
        "@babel/core": "^7.6.3",
        "@babel/plugin-proposal-object-rest-spread": "^7.6.2",
        "@babel/preset-env": "^7.6.3",
        "@epickris/bootstrap-kit": "^0.1.1",
        "babel-plugin-transform-es2015-modules-strip": "^0.1.1",
        "bootstrap": "^4.3.1",
        "clean-css-cli": "^4.3",
        "gh-pages": "^2.1.1",
        "gulp": "^4.0.2",
        "gulp-autoprefixer": "^4",
        "gulp-babel": "^8",
        "gulp-clean-css": "^3.8",
        "gulp-concat": "^2.6.1",
        "gulp-connect": "^5",
        "gulp-open": "^3.0.1",
        "gulp-rename": "^1.2.2",
        "gulp-replace": "^1",
        "gulp-sass": "^4",
        "gulp-sourcemaps": "^2.6.1",
        "gulp-uglify": "^3",
        "gulp-wrapper": "^1",
        "node-sass": "^4",
        "node-sass-tilde-importer": "^1",
        "npm-run-all": "^4.1.5",
        "pantone-css": "^0.1.2",
        "postcss-cli": "^6.1.3",
        "stylelint": "^11",
        "stylelint-config-rational-order": "^0.1.2",
        "stylelint-config-standard": "^19"
    },
    "repository": "https://github.com/cozyglow/cozy-glow-theme.git",
    "bugs": "https://github.com/cozyglow/cozy-glow-theme/issues",
    "files": [
        "dist/*",
        "docs/*",
        "fonts/*",
        "js/*",
        "scss/*"
    ],
    "version": "0.5.3"
}
